@page "/"

<PageTitle>Home - EventEase</PageTitle>

<div class="hero-section text-center py-5 mb-5">
    <h1 class="display-4 fw-bold text-primary">Welcome to EventEase</h1>
    <p class="lead">Your comprehensive event management solution</p>
    <p class="mb-4">Create, manage, and promote events with ease. Connect with your community and make every event memorable.</p>
    <div class="d-flex justify-content-center gap-3">
        <a href="/events" class="btn btn-primary btn-lg">
            <i class="bi bi-calendar-event me-2"></i>Browse Events
        </a>
        <a href="/events/create" class="btn btn-outline-primary btn-lg">
            <i class="bi bi-plus-circle me-2"></i>Create Event
        </a>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card h-100 text-center">
            <div class="card-body">
                <i class="bi bi-calendar-plus display-4 text-primary mb-3"></i>
                <h5 class="card-title">Easy Event Creation</h5>
                <p class="card-text">Create events in minutes with our intuitive form. Add all the details your attendees need.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 text-center">
            <div class="card-body">
                <i class="bi bi-people display-4 text-success mb-3"></i>
                <h5 class="card-title">Manage Attendees</h5>
                <p class="card-text">Track registrations, manage capacity, and communicate with your event participants.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 text-center">
            <div class="card-body">
                <i class="bi bi-graph-up display-4 text-info mb-3"></i>
                <h5 class="card-title">Event Analytics</h5>
                <p class="card-text">Get insights into your event performance with detailed analytics and reporting.</p>
            </div>
        </div>
    </div>
</div>

<div class="mt-5">
    <h3 class="text-center mb-4">Quick Stats</h3>
    <div class="row text-center">
        <div class="col-md-3">
            <div class="stat-card">
                <h2 class="text-primary">@totalEvents</h2>
                <p class="text-muted">Total Events</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <h2 class="text-success">@upcomingEvents</h2>
                <p class="text-muted">Upcoming Events</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <h2 class="text-info">@totalAttendees</h2>
                <p class="text-muted">Total Attendees</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <h2 class="text-warning">@activeUsers</h2>
                <p class="text-muted">Active Users</p>
            </div>
        </div>
    </div>
</div>

@code {
    private int totalEvents = 3;
    private int upcomingEvents = 3;
    private int totalAttendees = 437;
    private int activeUsers = 125;

    protected override async Task OnInitializedAsync()
    {
        // In a real app, you would load these stats from your data service
        await Task.Delay(1);
    }
}
